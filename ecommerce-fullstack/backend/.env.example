# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database
MONGODB_DATABASE=sklep

# JWT Configuration (КРИТИЧЕСКИ ВАЖНО!)
# Сгенерируйте безопасный ключ командой: .\generate-jwt-secret.ps1
JWT_SECRET=CHANGE_THIS_TO_GENERATED_SECRET_KEY_AT_LEAST_256_BITS
JWT_EXPIRATION=86400000

# Server Configuration
SERVER_PORT=8080

# CORS Configuration (указать реальные домены для продакшена)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Cookie Security
APP_COOKIES_SECURE=false
APP_REFRESH_TOKEN_EXPIRATION=2592000

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600000

# Email Configuration (for future use)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# OAuth Configuration (for future use)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# File Upload Configuration
MAX_FILE_SIZE=10MB
UPLOAD_DIRECTORY=uploads/
